
<form method="post" action="/albums">
  <label for="artist">Artist:</label>
  <select id="artist" name="artist_id">
    <% for artist in @artists %>
      <option value="<%=artist.id%>"><%=artist.name%></option>
    <% end %>


  </select>

  <label for="title">Album:</label>
  <input id="title" type="text" name="title"

  <label for="genre-select"> Genre: </label>
  <select id="genre-select" name="genre">
    <option value="pop">Pop </option>
    <option value="Rock"> Rock </option>
    <option value="Britpop"> BritPop </option>
    <option value="Dance"> Dance </option>
    <option value="Grunge"> Grunge </option>
    <option value="Soul"> Soul </option>
  </select>

  <label for="buy_price">Buy Price: </label>
  <input type="number" id="buy_price" name="buy_price" />

  <label for="sell_price">Sell Price: </label>
  <input type="number" id="sell_price" name="sell_price" />

  <label for="quantity">Quantity: </label>
  <input type="number" id="quantity" name="quantity" />

  <input type="submit" value="save"/>

</form>
